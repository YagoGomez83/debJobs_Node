<main class="contenedor">
  <form action="/crear-cuenta" method="post" class="default-form">
    <div class="campo">
      <label for="nombre">nombre</label>
      <input type="text" name="nombre" id="nombre" placeholder="Tu nombre" />
    </div>
    <div class="campo">
      <label for="email">E-Mail</label>
      <input type="email" name="email" id="email" placeholder="Tu email" />
    </div>
    <div class="campo">
      <label for="password">Contraseña</label>
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Tu contraseña"
      />
    </div>
    <div class="campo">
      <label for="rep-password">Repite contraseña</label>
      <input
        type="password"
        name="confirmar"
        id="rep-password"
        placeholder="Repetir contraseña"
      />
    </div>
    <div class="campo acciones">
      <a href="/iniciar-sesion">Volver a Iniciar Sesión</a>
    </div>
    <div class="campo">
      <input type="submit" value="Crear Cuenta" class="btn btn-azul" />
    </div>
  </form>
</main>