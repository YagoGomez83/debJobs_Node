<main class="contenedor">
  <form method="post" class="default-form">
    <div class="campo">
      <label for="password">Nuevo Password</label>
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Ingrese su nueva contraseña"
        required
      />
    </div>

    <div class="campo">
      <input type="submit" value="Guardar contraseña" class="btn btn-azul" />
    </div>

  </form>
</main>