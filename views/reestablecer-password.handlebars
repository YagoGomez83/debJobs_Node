<main class="contenedor">
  <form action="/reestablecer-password" method="post" class="default-form">
    <div class="campo">
      <label for="email">Email:</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Tu correo"
        required
      />
    </div>

    <div class="campo acciones">
      <a href="/iniciar-sesion">Volver a Iniciar Sesión</a>

    </div>
    <div class="campo">
      <input
        type="submit"
        value="Reestablecer contraseña"
        class="btn btn-azul"
      />
    </div>

  </form>
</main>