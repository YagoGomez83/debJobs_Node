<main class="contenedor">
  <form action="/vacantes/nueva" method="post" class="default-form">
    <h3>Información General</h3>
    <div class="campo">
      <label for="titulo">Título</label>
      <input
        type="text"
        id="titulo"
        placeholder="Ej:React Developer"
        name="titulo"
        required
      />
    </div>
    <div class="campo">
      <label for="empresa">Empresa</label>
      <input
        type="text"
        id="empresa"
        placeholder="ingresa su empresa"
        name="empresa"
        required
      />
    </div>
    <div class="campo">
      <label for="ubicacion">Ubicación</label>
      <input
        type="text"
        id="ubicacion"
        placeholder="Ej:Argentina"
        name="ubicacion"
        required
      />
    </div>
    <div class="campo">
      <label for="salario">Salario (USD)</label>
      <input
        type="text"
        id="salario"
        placeholder="Ej:1000 USD"
        name="salario"
        required
      />
    </div>
    <div class="campo">
      <label for="contrato">Contrato</label>
      <select name="contrato" id="contrato">
        <option value="" disabled selected>--Selecciona--</option>
        <option value="Freelance">Freelance</option>
        <option value="Full Time">Full Time</option>
        <option value="Part Time Day">Part Time Day</option>
        <option value="Por Proyecto">Por Proyecto</option>
      </select>
    </div>
    <h3>Descripción del puesto</h3>
    <div class="campo descripcion">
      <label for="">Descripción</label>
      <input type="hidden" id="x" name="descripcion" />
      <trix-editor input="x"></trix-editor>
    </div>
    <h3>Conocimientos</h3>
    <ul class="lista-conocimientos">
      {{#seleccionarSkills a}}{{/seleccionarSkills}}
    </ul>
    <div class="campo centrar-horizontal">
      <input type="hidden" name="skills" id="skills" />
      <input type="submit" value="Publicar" class="btn btn-azul" />
    </div>
  </form>
</main>